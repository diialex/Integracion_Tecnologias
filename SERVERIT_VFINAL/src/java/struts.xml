<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
     <package name="default" extends="struts-default">
        <!-- Ejecutas el proyecto desde cero y hace chain a listarRegistros -->
        <action name="">
            <result type="chain">
                <param name="actionName">listarAlquileres</param>
            </result>
        </action>
    </package>
    
    <package name="actions" extends="struts-default">
        <!-- Ejecuta la query y todos los parametros necearios en el controler.{//action} y te lleva al jsp principal para mostrarlos-->
        <action name="listarAlquileres" class="controller.CargarListaVehiculosAction">
            <result name="success">/views/menuAlquilerJefe.jsp</result>
            <!--<result name="error">/views/menuJefe.jsp</result>-->
        </action>
        
    </package>
</struts>
